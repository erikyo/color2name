{
  "name": "color-2-name",
  "version": "1.2.0",
  "author": "Erik <erik@codekraft.it>",
  "license": "ISC",
  "main": "./lib/cjs/index.js",
  "unpkg": "lib/browser/index.js",
  "jsdelivr": "lib/browser/index.js",
  "exports": {
    ".": {
      "types": "./lib/cjs/@types/index.d.ts",
      "require": {
        "default": "./lib/cjs/index.js",
        "types": "./lib/cjs/@types/index.d.ts"
      },
      "import": {
        "default": "./lib/esm/index.js",
        "types": "./lib/@types/index.d.ts"
      },
      "browser": "./lib/browser/index.js",
      "umd": "./lib/umd/index.js",
      "node": "./lib/umd/index.js"
    }
  },
  "description": "Finds the closest color name to a given hex, rgb and hsl color (with and without alpha). It uses the Euclidean distance formula to calculate the distance between colors in the RGB color space",
  "types": "dist/types/",
  "homepage": "https://erikyo.github.io/color-2-name/",
  "scripts": {
    "gen-colorSet": "node colorSetUtils.mjs colorSet",
    "docGen": "jsdoc -c jsdoc.json",
    "benchmark": "tsc --outDir bench --skipLibCheck --esModuleInterop ./tests/benchmark.ts && node ./bench/tests/benchmark.js",
    "test": "jest --silent=false --coverage",
    "lint": "eslint ./src --fix && prettier --write ./src",
    "build": "rimraf dist && concurrently npm:module-* && concurrently npm:types-*",
    "module-cjs": "swc src -d lib/cjs -C module.type=commonjs --config-file .swcrc-cjs",
    "module-esm": "swc src -d lib/esm -C module.type=es6 --config-file .swcrc-esm",
    "module-umd": "npx spack",
    "module-browser": "npx esbuild src/index.ts --outdir=lib/browser --allow-overwrite --bundle --minify --sourcemap",
    "types-cjs": "tsc -p tsconfig.json --module commonjs --moduleResolution node --emitDeclarationOnly --declaration --declarationDir ./lib/cjs/@types --skipLibCheck",
    "types-esm": "tsc -p tsconfig.json --module Node16 --moduleResolution Node16 --emitDeclarationOnly --declaration --declarationDir ./lib/@types --skipLibCheck"
  },
  "files": [
    "lib/",
    "tests/",
    "*.json",
    ".gitignore",
    ".eslintrc.js",
    "LICENSE",
    "readme.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erikyo/color-2-name.git"
  },
  "bugs": {
    "url": "https://github.com/erikyo/color-2-name/issues"
  },
  "keywords": [
    "color",
    "color names",
    "color-names",
    "css",
    "css colors",
    "accessibility",
    "a11y",
    "hex",
    "rgb",
    "hsl",
    "convert colors",
    "color picker"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "1.2.239",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/parser": "^6.14.0",
    "benny": "^3.7.1",
    "colord": "^2.9.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "rimraf": "^4.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0"
  }
}
